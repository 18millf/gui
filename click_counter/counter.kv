<CounterView>:
    BoxLayout:
        size: root.width, root.height
        spacing: 60

        orientation: "vertical"

        Label:
            font_size: 64
            id: counter
            text: "0"

        BoxLayout:
            orientation: "horizontal"

            Button:
                font_size: 32
                text: "+"
                on_press: root.increment()

            Button:
                font_size: 32
                text: "-"
                on_press: root.deincrement()