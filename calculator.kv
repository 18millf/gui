#:kivy !

<CalculatorView>:
    BoxLayout:
        size: root.width, root.height
        spacing: 60

        orientation: "vertical"

        GridLayout:
            cols: 2

            Label:
                text: "1st Number"
            TextInput:
                id: left_input
                multiline: False

            Label:
                text: "2nd Number"
            TextInput:
                id: right_input
                multiline: False

        GridLayout:
            cols: 2

            Button:
                text: "Add"
                on_press: root.perform_add()
            Button:
                text: "Subtract"
                on_press: root.perform_subtract()
            Button:
                text: "Multiply"
                on_press: root.perform_multiply()
            Button:
                text: "Divide"
                on_press: root.perform_divide()

        Label:
            id: result_text
